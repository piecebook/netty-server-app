<?xml version="1.0" encoding="UTF-8"?>
<configuration status="OFF">

    <appenders>
        <console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%-d{yyyy-MM-dd HH:mm:ss}  [ %t:%r ] - [ %p ]  %m%n"/>
        </console>

        <File name="FileInfo" fileName="log/dao/logs/info.log">
            <Filters>
                <ThresholdFilter level="INFO"/>
                <ThresholdFilter level="WARN" onMatch="DENY" onMismatch="NEUTRAL"/>
            </Filters>
            <PatternLayout pattern="%-d{yyyy-MM-dd HH:mm:ss}  [ %t:%r ] - [ %p ]  %m%n"/>
        </File>

        <File name="FileWarn" fileName="log/dao/logs/warn.log">
            <Filters>
                <ThresholdFilter level="WARN"/>
                <ThresholdFilter level="ERROR" onMatch="DENY" onMismatch="NEUTRAL"/>
            </Filters>
            <PatternLayout pattern="%-d{yyyy-MM-dd HH:mm:ss}  [ %t:%r ] - [ %p ]  %m%n"/>
        </File>

        <File name="FileError" fileName="log/dao/logs/error.log">
            <ThresholdFilter level="ERROR"/>
            <PatternLayout pattern="%-d{yyyy-MM-dd HH:mm:ss}  [ %t:%r ] - [ %p ]  %m%n"/>
        </File>

    </appenders>

    <loggers>
        <root level="DEBUG">
            <appender-ref ref="Console"/>
            <appender-ref ref="FileInfo"/>
            <appender-ref ref="FileWarn"/>
            <appender-ref ref="FileError"/>
        </root>
    </loggers>

</configuration>